@{
    ViewData["Title"] = "Juego";
}
<div id="juego-container">
    <h3>Jugador: <span id="username">@ViewBag.Username</span></h3>
    <h4>Puntaje: <span id="puntaje">@ViewBag.PuntajeActual</span></h4>
    <h5>Pregunta @(@ViewBag.ContadorPregunta + 1):</h5>
    <p id="enunciado">@ViewBag.PreguntaActual.Enunciado</p>
    @if(!string.IsNullOrEmpty(ViewBag.PreguntaActual.Foto))
    {
        <img id="fotoPregunta" src="@ViewBag.PreguntaActual.Foto" alt="Imagen Pregunta" />
    }

    <form method="post" action="@Url.Action("VerificarRespuesta", "Home")" id="formRespuesta">
        <input type="hidden" name="idPregunta" value="@ViewBag.PreguntaActual.IdPregunta" />
        @foreach(Respuesta r in ViewBag.Respuestas)
        {
            <div class="radio-group">
                <label>
                    <input type="radio" name="idRespuesta" value="@r.IdRespuesta" required />
                    @r.Opcion. @r.Contenido
                    @if(!string.IsNullOrEmpty(r.Foto))
                    {
                        <img src="@r.Foto" alt="Imagen Respuesta" class="img-respuesta" />
                    }
                </label>
            </div>
        }
        <button type="submit" class="btn btn-primary">Verificar</button>
    </form>

    <div id="mensaje" class="@(ViewBag.MensajeRespuesta == "Â¡Correcto!" ? "correcto" : "incorrecto")" style="@(ViewBag.MensajeRespuesta != null ? "display:block;" : "")">
        @ViewBag.MensajeRespuesta
    </div>
    @if(ViewBag.MensajeRespuesta != null)
    {
        <a href="/Home/Jugar" id="btnSiguiente" class="btn btn-success mt-3">Entendido</a>
    }
</div>