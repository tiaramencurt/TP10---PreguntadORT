@{
    ViewData["Title"] = "Juego";
}

<div id="juego-container" style="max-width:600px; margin:auto; margin-top:30px; text-align:center;">
    <h3>Jugador: <span id="username">@ViewBag.Username</span></h3>
    <h4>Puntaje: <span id="puntaje">@ViewBag.PuntajeActual</span></h4>
    <h5>Pregunta @(@ViewBag.ContadorPregunta + 1):</h5>
    <p id="enunciado" data-idPregunta="@pregunta.IdPregunta">@pregunta.Enunciado</p>
    @if(!string.IsNullOrEmpty(ViewBag.PreguntaActual.Foto))
    {
        <img id="fotoPregunta" src="@pregunta.Foto" alt="Imagen Pregunta" style="max-width:100%;"/>
    }

    <div id="respuestas" style="margin-top:20px;">
        @foreach(var r in ViewBag.Respuestas)
        {
            <button class="respuesta-btn btn btn-outline-primary btn-block mb-2" data-id="@r.IdRespuesta" style="width:100%; padding:10px;">
                @r.Opcion. @r.Contenido
                @if(!string.IsNullOrEmpty(r.Foto))
                {
                    <br/>
                    <img src="@r.Foto" alt="Imagen Respuesta" style="max-width:100px; display:block; margin:auto;"/>
                }
            </button>
        }
    </div>

    <div id="mensaje" style="margin-top:20px; font-size:24px; font-weight:bold;"></div>
</div>

<script src="~/js/juego.js"></script>
