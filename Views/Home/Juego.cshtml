@{
    ViewData["Title"] = "Juego";
    string mensaje = ViewBag.MensajeRespuesta as string;
    bool mostrarMensaje = !string.IsNullOrEmpty(mensaje);
}

<div id="juego-container" style="max-width:600px; margin:auto; margin-top:30px; text-align:center;">
    <h3>Jugador: <span id="username">@ViewBag.Username</span></h3>
    <h4>Puntaje: <span id="puntaje">@ViewBag.PuntajeActual</span></h4>
    <h5>Pregunta @(@ViewBag.ContadorPregunta + 1):</h5>
    <p id="enunciado">@ViewBag.PreguntaActual.Enunciado</p>
    @if(!string.IsNullOrEmpty(ViewBag.PreguntaActual.Foto))
    {
        <img id="fotoPregunta" src="@ViewBag.PreguntaActual.Foto" alt="Imagen Pregunta" style="max-width:100%;" />
    }

    <form method="post" action="@Url.Action("VerificarRespuesta", "Home")" id="formRespuesta">
        <input type="hidden" name="idPregunta" value="@ViewBag.PreguntaActual.IdPregunta" />
        @foreach(Respuesta r in ViewBag.Respuestas)
        {
            <div style="margin-bottom: 10px;">
                <label>
                    <input type="radio" name="idRespuesta" value="@r.IdRespuesta" required />
                    @r.Opcion. @r.Contenido
                    @if(!string.IsNullOrEmpty(r.Foto))
                    {
                        <br />
                        <img src="@r.Foto" alt="Imagen Respuesta" style="max-width:100px; display:block; margin:auto;" />
                    }
                </label>
            </div>
        }
        <button type="submit" class="btn btn-primary">Verificar</button>
    </form>

    <div id="mensaje" style="margin-top:20px; font-size:24px; font-weight:bold; color:@(mensaje == "Â¡Correcto!" ? "green" : "red"); display:@(mostrarMensaje ? "block" : "none");">
        @mensaje
    </div>
    @if(mostrarMensaje)
    {
        <a href="/Home/Jugar" id="btnSiguiente" class="btn btn-success mt-3">Siguiente pregunta</a>
    }
</div>